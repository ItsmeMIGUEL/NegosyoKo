<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:angle="90"
        android:startColor="#F8FAFC"
        android:centerColor="#F1F5F9"
        android:endColor="#E2E8F0"
        android:type="linear" />

    <!-- Rounded Corners -->
    <corners
        android:radius="8dp" />

    <!-- Subtle Border -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" />

    <!-- Optional Padding -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>