<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with ActionBar -->
    <style name="Theme.NegosyoKo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_primary</item>               <!-- #55A859 -->
        <item name="colorPrimaryVariant">@color/green_dark</item>           <!-- #2F7D32 -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green_accent</item>             <!-- #65C26D -->
        <item name="colorSecondaryVariant">@color/green_light</item>       <!-- #A1D89C -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/background_light</item> <!-- #F2F7F1 -->
        <item name="colorSurface">@color/card_background</item>             <!-- #E9F4E6 -->
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar and nav bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/green_dark</item>

        <!-- Text styling -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!-- Variant without ActionBar -->
    <style name="Theme.NegosyoKo.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/green_dark</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- AppBar and Popup overlays -->
    <style name="Theme.NegosyoKo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.NegosyoKo.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
